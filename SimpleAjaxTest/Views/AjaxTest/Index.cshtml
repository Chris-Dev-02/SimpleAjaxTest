@model IEnumerable<PostModel>
@{
}

<div class="row" id="content-container">
    <div class="col-md-5" id="publish-post-container">
        <div class="card">
            <div class="card-body">
                <form id="add-post-form">
                    <div class="mb-3">
                        <label for="" class="form-label">Published by</label>
                        <input type="text" name="PublishedBy" id="add-publishedBy" class="form-control" placeholder="@@username" />
                    </div>
                    <div class="mb-3">
                        <label for="" class="form-label">Post Title</label>
                        <input type="text" name="Title" id="add-title" class="form-control" placeholder="" />
                    </div>
                    <div class="mb-3">
                        <label for="" class="form-label">Post description</label>
                        <textarea name="Content" rows="5" id="add-content" class="form-control" placeholder=""></textarea>
                    </div>
                    <button class="btn btn-primary" id="add-post-button" type="submit">Save</button>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-7" id="posts-container">
        @if (Model != null)
        {
            @foreach (var post in Model)
            {
                <div class="card mb-2" id="post-@post.Id">
                    <div class="card-body">
                        <h2 class="card-title">@post.Title</h2>
                        <h6>Published @post.CreatedDate by @post.PublishedBy</h6>
                        <p>@post.Content</p>
                        <button class="editButton btn btn-primary" id="@post.Id">Edit</button>
                        <button class="deleteButton btn btn-danger" id="@post.Id">Delete</button>
                    </div>
                </div>
            }
        }
        else
        {
            <h1>Sorry there are no post published</h1>
        }
    </div>
</div>
