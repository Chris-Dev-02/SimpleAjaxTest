@model PostModel
@{
    if(Model != null)
    {
        Layout = null;
        <form id="edit-post-form">
            <div class="mb-3">
                <label for="" class="form-label">Post Title</label>
                <input type="text" name="Title" class="title form-control" value="@Model.Title" placeholder="First task" />
            </div>
            <div class="mb-3">
                <label for="" class="form-label">Post description</label>
                <textarea name="Content" rows="5" class="description form-control" value="@Model.Content" placeholder="Program a new ticket"></textarea>
            </div>
            <button type="submit">Save</button>
        </form>
    }
    else
    {
        <form id="add-post-form">
            <div class="mb-3">
                <label for="" class="form-label">Post Title</label>
                <input type="text" name="Title" class="title form-control" placeholder="First task"/>
            </div>
            <div class="mb-3">
                <label for="" class="form-label">Post description</label>
                <textarea name="Content" rows="5" class="description form-control" placeholder="Program a new ticket"></textarea>
            </div>
            <button type="submit">Save</button>
        </form>
    }
}

